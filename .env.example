# ============================================================================
# Claude Code Template - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Anthropic API Key (REQUIRED)
# Get from: https://console.anthropic.com/
# Used for orchestrator agent and all command agents
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# PostgreSQL Connection String (REQUIRED for database features)
#
# NeonDB Example (recommended - free tier available):
#   DATABASE_URL=postgresql://username:password@ep-xxx-xxx.aws.neon.tech/neondb?sslmode=require
#
# Docker Example:
#   DATABASE_URL=postgresql://postgres:mypassword@localhost:5432/orchestrator
#
# Local PostgreSQL Example:
#   DATABASE_URL=postgresql://localhost:5432/orchestrator
#
# Get NeonDB connection string from: https://console.neon.tech
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# PostgreSQL Password (REQUIRED for Docker deployment)
# Used by docker-compose.yml for postgres service
# Choose a secure password for production deployments
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ============================================================================
# OPTIONAL CONFIGURATION (All values below have sensible defaults)
# ============================================================================

# ============================================================================
# ADDITIONAL API KEYS (OPTIONAL)
# ============================================================================

# Optional: Additional AI provider API keys (if you want to use them)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
REPLICATE_API_TOKEN=
GEMINI_API_KEY=your_gemini_api_key_here
CEREBRAS_API_KEY=

# Optional: NeonDB API Key (for programmatic database management)
NEON_DB_API_KEY=

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ============================================================================

# Database connection pool settings (defaults shown)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# BACKEND CONFIGURATION (OPTIONAL)
# ============================================================================

# Backend server host and port
BACKEND_HOST=127.0.0.1
BACKEND_PORT=9403

# ============================================================================
# FRONTEND CONFIGURATION (OPTIONAL)
# ============================================================================

# Frontend dev server host and port
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=5175

# API base URL for frontend to connect to backend
VITE_API_BASE_URL=http://127.0.0.1:9403

# ============================================================================
# WEBSOCKET CONFIGURATION (OPTIONAL)
# ============================================================================

# WebSocket URL (automatically constructed from backend host:port)
WEBSOCKET_URL=ws://127.0.0.1:9403/ws

# ============================================================================
# ORCHESTRATOR AGENT CONFIGURATION (OPTIONAL)
# ============================================================================

# Model for orchestrator agent
# Options: claude-sonnet-4-20250514, claude-haiku-4-5-20251001
ORCHESTRATOR_MODEL=claude-sonnet-4-20250514

# Working directory for orchestrator and created agents
# Leave empty to use project root, or specify absolute path
ORCHESTRATOR_WORKING_DIR=

# ============================================================================
# COMMAND AGENT CONFIGURATION (OPTIONAL)
# ============================================================================

# Default model for command agents created by orchestrator
# Options: claude-sonnet-4-20250514, claude-haiku-4-5-20251001
DEFAULT_AGENT_MODEL=claude-sonnet-4-20250514

# Fast model for AI summarization and quick tasks
FAST_MODEL=claude-haiku-4-5-20251001

# System prompt template for managed agents (relative to backend directory)
AGENT_SYSTEM_PROMPT_TEMPLATE_PATH=

# Maximum turns for agent execution before stopping
MAX_AGENT_TURNS=500

# ============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Directory for hourly rotating log files (relative to backend directory)
LOG_DIR=backend/logs

# ============================================================================
# QUERY LIMITS (OPTIONAL)
# ============================================================================

# Default limits for database queries (pagination)
DEFAULT_AGENT_LOG_LIMIT=50
DEFAULT_SYSTEM_LOG_LIMIT=50
DEFAULT_CHAT_HISTORY_LIMIT=300

# ============================================================================
# CORS CONFIGURATION (OPTIONAL)
# ============================================================================

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://127.0.0.1:5175,http://localhost:5175

# ============================================================================
# IDE INTEGRATION (OPTIONAL)
# ============================================================================

# IDE command for opening files from UI (supports 'cursor' or 'code')
IDE_COMMAND=code
IDE_ENABLED=true

# ============================================================================
# SALES REPRESENTATIVE REGISTRY BOT (OPTIONAL)
# ============================================================================

# Telegram Bot Token for the Sales Rep Registry Bot
# Get from @BotFather on Telegram:
#   1. Message @BotFather
#   2. Send /newbot
#   3. Follow instructions to create a new bot
#   4. Copy the token provided
REGISTRY_BOT_TOKEN=your_telegram_bot_token_here

# Corporate email domain for validation (optional)
# Emails must match this domain during registration
CORPORATE_EMAIL_DOMAIN=truerealestate.bali

# Google Calendar Integration (optional)
# For per-rep calendar connectivity
# Get from Google Cloud Console:
#   1. Create a project at https://console.cloud.google.com
#   2. Enable Google Calendar API
#   3. Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# ZOOM INTEGRATION (OPTIONAL)
# ============================================================================

# Zoom Server-to-Server OAuth Credentials
# Get from Zoom App Marketplace:
#   1. Go to https://marketplace.zoom.us/develop/create
#   2. Choose "Server-to-Server OAuth" app type
#   3. Fill in basic app information
#   4. Copy Account ID, Client ID, and Client Secret
#   5. Add required scopes: meeting:write, user:read
#
# Credentials are stored at ~/.zoom_credentials/credentials.json
# Example credentials.json format:
# {
#   "account_id": "your_account_id",
#   "client_id": "your_client_id",
#   "client_secret": "your_client_secret"
# }
#
# IMPORTANT: All sales reps share the same Zoom account
# Meetings are created under the Zoom account specified in credentials.json
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=

# ============================================================================
# OUTREACH DAEMON CONFIGURATION (OPTIONAL)
# ============================================================================

# Interval between prospect assignment checks (in seconds)
# Default: 300 (5 minutes)
OUTREACH_INTERVAL_SECONDS=300

# Maximum number of prospects to assign to one rep at a time
# Default: 5
MAX_PROSPECTS_PER_REP=5

# Enable or disable outreach daemon
# Set to false to pause prospect assignments
OUTREACH_ENABLED=true
